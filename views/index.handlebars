<nav class="navbar navbar-inverse">
    <div class="container-fluid"></div>
        <div class="navbar-header">
            <a class="navbar-brand" href="/">Mongo-Scraper</a>
        </div>
        <ul class="nav top-buttons">
            <li><button class="btn btn-warning scrape">Scrape Articles!</button></li>
            <li><button class="btn btn-warning saved">Saved Articles</button></li>
        </ul>
    </div>
</nav>
<div class="jumbotron text-center">
    <div class="overlay">
    </div>
    <div class="background-image">
    </div>
    <div id="caption">
        <h1>Mongo Scraper</h1>
        <p>New York Times Edition</p>
    </div>
</div>
<div class="container-fluid article-container">
    
        {{#each articles}}
            <h4>{{this.headline}}</h4>
                <p>{{this.summary}}</p>
                    <a href={{this.url}} target="_blank"> {{this.url}}</a>
                    </br>
                        <button type= "button" class="btn btn-success save-button" data-id={{this.id}}>Save Article</button>
        {{/each}}
   
</div>

<footer class="footer">
    <div class="container">
        <p>New York Times Mongo Scraper</p>
    </div>
</footer>